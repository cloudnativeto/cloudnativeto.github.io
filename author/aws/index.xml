               src=&#34;https://cloudnative.to/blog/introducing-amazon-eks-distro/0081Kckwgy1glhwzwpf3fj30rs0fst9y_hu50647203a03ded5febae34a17fe2daf7_53498_a07df4d35368c3bb047809f282b4acac.webp&#34;
